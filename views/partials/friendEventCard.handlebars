<div class="event-card mb-5" name="search-event-card">
  <div class="event-card-header">
    <img src={{event.more_info_link}} alt="rover" class="my-3" />
  </div>
  <div class="event-card-body">
    <h4 class="dark-purple">
      {{event.title}}
    </h4>
    <div class="event-description h-25 p-1">
      {{event.description}}
    </div>
    <hr />
    <div class="event-card-header">
      <img src={{user.profile_img_url}} alt="rover" class="img-thumbnail" />
    </div>
    <div class="user-info">
      <small>{{user.user_name}}</small>
    </div>
  </div>
  <div class="text-center mb-3">
    {{#unless hasAccepted}}
      <button
        id="friendEvent-accept"
        class="btn btn-success"
        data-friendEvent-id="{{id}}"
      >Accept</button>
      <button
        id="friendEvent-decline"
        class="btn btn-success"
        data-friendEvent-id="{{id}}"
      >Decline</button>
    {{/unless}}

  </div>
</div>