{{#if isLoggedIn }}
  {{> privateNavBar }}
{{else}}
  {{> publicNavBar }}
{{/if}}

<div><h1>Events in your area</h1></div>
<!-- events cards -->
<div class="searchEventsTable">
  {{#each events as |event|}}
    <div class="event-card">
      <div class="event-card-header">
        <img src={{event.thumbnail}} alt="rover" />
      </div>
      <div class="event-card-body">

        <h4>
          {{event.title}}
        </h4>
        <p>
          {{event.description}}
        </p>
        <p>
          {{event.address}}
        </p>
        <div>

          <div class="user-info">
            <h5>{{event.date.start_date}}</h5>
            <small>{{event.date.when}}</small>
          </div>
          
          <button id="open-modal">See More</button>
        </div>
      </div>
    </div>

  {{/each}}
</div>
<!-- modal -->
<div class ="modal-container" id="modal-container">
  
    <div class="map">*map*</div>
    <div class="modal-buttons">
    <button class="add-event"id="add-event">Add Event</button>
    <button class="close" id="close-modal">Close</button>
    </div>
    </div>
  

