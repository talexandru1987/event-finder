{{> publicNavBar}}

<!-- Home Page Image and Title -->
    <div class="home-container">
      <img
        src="./assets/images/home-page-images/ferris-wheel.jpg"
        class="home-image"
        alt=""
      />
    </div>
    <!-- title -->
    <div class="text-center"><h1>Your Saved Events</h1></div>
    <!-- card container -->
    <div class="row-justify-content-center">
      
    <div class="event-card">
      <div class="event-card-header">
        <img src={{event.thumbnail}} alt="" />
      </div>
      <div class="event-card-body">

        <h4>
          {{event.title}}
        </h4>
        <p>
          {{event.description}}
        </p>
        <p>
          {{event.address}}
        </p>
        <div>

          <div class="user-info">
            <h5>{{event.date.start_date}}</h5>
            <small>{{event.date.when}}</small>
          </div>
          
          <button>Invite Friends</button>
        </div>
      </div>
    </div>

  
    </div>